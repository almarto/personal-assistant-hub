#!/bin/sh
# Pre-commit hook to run tests, lint, and format

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a Git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
  echo "âŒ Not in a Git repository"
  exit 1
fi

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx|json|md)$' || true)

if [ -z "$STAGED_FILES" ]; then
  echo "âœ… No relevant files staged for commit"
  exit 0
fi

echo "ğŸ“ Staged files to check:"
echo "$STAGED_FILES" | sed 's/^/  - /'

# Run type checking
echo "ğŸ”§ Running type checks..."
if ! pnpm run check-types; then
  echo "âŒ Type checking failed"
  exit 1
fi

# Run linting
echo "ğŸ§¹ Running linter..."
if ! pnpm run lint; then
  echo "âŒ Linting failed"
  exit 1
fi

# Run formatting (and auto-fix)
echo "ğŸ’… Running formatter..."
if ! pnpm run format; then
  echo "âŒ Formatting failed"
  exit 1
fi

# Check if formatting changed any files
MODIFIED_FILES=$(git diff --name-only)
if [ -n "$MODIFIED_FILES" ]; then
  echo "ğŸ“ Files were auto-formatted:"
  echo "$MODIFIED_FILES" | sed 's/^/  - /'
  echo "ğŸ”„ Auto-staging formatted files..."
  
  # Add the formatted files to the staging area
  git add $MODIFIED_FILES
  
  echo "âœ… Formatted files have been staged automatically"
fi

# Run tests if they exist
echo "ğŸ§ª Running tests..."
if ! pnpm run test; then
  echo "âŒ Tests failed"
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0