{
  "name": "@personal-assistant-hub/ui",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared UI components and design system",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./dist/index.css": "./dist/index.css",
    "./tokens/colors.css": "./dist/tokens/colors.css",
    "./tokens/spacing.css": "./dist/tokens/spacing.css",
    "./tokens/typography.css": "./dist/tokens/typography.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@personal-assistant-hub/i18n": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@personal-assistant-hub/eslint-config": "workspace:*",
    "@personal-assistant-hub/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "next",
    "@storybook/addon-interactions": "next",
    "@storybook/addon-links": "9.1.4",
    "@storybook/blocks": "next",
    "@storybook/react": "9.1.4",
    "@storybook/react-vite": "9.1.4",
    "@storybook/test": "next",
    "@types/node": "24.5.0",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "esbuild-css-modules-plugin": "^3.1.5",
    "eslint": "9.35.0",
    "storybook": "9.1.4",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vite": "7.1.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}