    "@storybook/blocks": "next",
    "@storybook/react": "9.1.6",
    "@storybook/react-vite": "9.1.6",
    "@storybook/test": "next",
    "esbuild-css-modules-plugin": "^3.1.5",
    "storybook": "9.1.6"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
