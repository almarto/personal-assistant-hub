{
  "name": "@personal-assistant-hub/auth",
  "version": "0.1.0",
  "type": "module",
  "description": "Authentication package with WebAuthn/passkey support",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zustand": "5.0.8"
  },
  "devDependencies": {
    "@personal-assistant-hub/eslint-config": "workspace:*",
    "@personal-assistant-hub/typescript-config": "workspace:*",
    "@types/bcryptjs": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  }
}