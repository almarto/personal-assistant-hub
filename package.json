{
  "name": "personal-assistant-hub",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@personal-assistant-hub/homepage --filter=@personal-assistant-hub/api",
    "dev:all": "turbo run dev",
    "storybook": "turbo run storybook",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "setup-hooks": "./scripts/setup-git-hooks.sh",
    "postinstall": "./scripts/setup-git-hooks.sh",
    "docker:dev": "docker-compose -f docker-compose.dev.yml --env-file .env.development up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml --env-file .env.development down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml --env-file .env.development logs -f",
    "docker:prod": "docker-compose --env-file .env up -d",
    "docker:prod:down": "docker-compose --env-file .env down",
    "docker:prod:logs": "docker-compose --env-file .env logs -f",
    "docker:build": "docker-compose build",
    "db:migrate": "pnpm --filter @personal-assistant-hub/database db:migrate",
    "db:generate": "pnpm --filter @personal-assistant-hub/database db:generate",
    "db:studio": "pnpm --filter @personal-assistant-hub/database db:studio",
    "db:seed-admin": "pnpm --filter @personal-assistant-hub/database db:seed-admin"
  },
  "dependencies": {
    "@simplewebauthn/browser": "13.1.2",
    "drizzle-orm": "0.44.5",
    "postgres": "3.4.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.5.1",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.8",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "jsdom": "27.0.0",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "turbo": "2.5.6",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.17.0"
}